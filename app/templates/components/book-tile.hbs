<div class="book-tile">
  <h3>{{#link-to 'book' book.id}}{{book.title}}{{/link-to}}</h3>
  <img src={{book.image}} alt={{book.title}} />
  <h4>{{book.author}}</h4>
  <button {{action 'delete' book}}>Delete</button>

  <button {{action 'addToCart' book}}>Add to Cart</button>
  <button {{action 'removeFromCart' book}}>Remove from Cart</button>
</div>
