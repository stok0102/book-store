<form>
  <div class="">
    <label for="title">Title</label>
    {{input value=title id="title"}}
  </div>
  <div class="">
    <label for="author">Author</label>
    {{input value=author id="author"}}
  </div>
  <div class="">
    <label for="price">Price</label>
    {{input value=price id="price" type="number"}}
  </div>
  <div class="">
    <label for="publishDate">Publish Date</label>
    {{input value=publishDate id="publishDate"}}
  </div>
  <div class="">
    <label for="genre">Genre</label>
    {{input value=genre id="genre"}}
  </div>
  <div class="">
    <label for="description">Description</label>
    {{input value=description id="description"}}
  </div>
  <div class="">
    <label for="image">Image URL</label>
    {{input value=image id="image"}}
  </div>

  <button {{action 'save' book}}>Add Book</button>
</form>
